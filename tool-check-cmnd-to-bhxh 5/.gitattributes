# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Excel files (binary)
*.xlsx binary
*.xls binary

# JSON files
*.json text eol=lf

# Configuration files
*.env text eol=lf
*.toml text eol=lf
*.txt text eol=lf

# Scripts
*.sh text eol=lf
*.bat text eol=crlf

# Documentation
*.md text eol=lf
*.rst text eol=lf

# Log files
*.log text eol=lf

# Ignore files that should never be committed
*.pyc linguist-generated=true
*.pyo linguist-generated=true
__pycache__/ linguist-generated=true
*.egg-info/ linguist-generated=true