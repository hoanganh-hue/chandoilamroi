# PRODUCTION CONFIGURATION - CHECK CCCD SYSTEM
# Optimized settings for maximum stability and performance
# Generated: 2025-09-07
# Version: v3.0.0 (Production Ready)

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL=sqlite:///./check_cccd_prod.db
# For PostgreSQL production:
# DATABASE_URL=postgresql://check_cccd_user:secure_password_2025@localhost:5432/check_cccd_prod

# ==========================================
# REDIS CONFIGURATION (Required for caching)
# ==========================================
REDIS_URL=redis://localhost:6379/0
# For production Redis cluster:
# REDIS_URL=redis://redis-cluster:6379/0

# ==========================================
# API SECURITY CONFIGURATION
# ==========================================
API_KEY=prod-api-key-2025-secure-change-in-production
SECRET_KEY=prod-secret-key-2025-high-entropy-change-in-production

# ==========================================
# RATE LIMITING CONFIGURATION
# ==========================================
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_BURST=5

# ==========================================
# SCRAPING CONFIGURATION (Optimized)
# ==========================================
REQUEST_TIMEOUT=25.0
MAX_RETRIES=3
RETRY_DELAY=2.0

# ==========================================
# CACHE CONFIGURATION
# ==========================================
CACHE_TTL_SECONDS=86400

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==========================================
# MONITORING CONFIGURATION
# ==========================================
ENABLE_METRICS=true
SENTRY_DSN=

# ==========================================
# PRODUCTION MODE
# ==========================================
ENVIRONMENT=production

# ==========================================
# CONNECTION POOLING CONFIGURATION
# ==========================================
HTTP_MAX_KEEPALIVE_CONNECTIONS=20
HTTP_MAX_CONNECTIONS=50
HTTP_KEEPALIVE_EXPIRY=30.0

# ==========================================
# ANTI-BOT CONFIGURATION (Optimized)
# ==========================================
ANTI_BOT_ENABLED=true
RANDOM_USER_AGENTS=true
RANDOM_HEADERS=true
REALISTIC_DELAYS=true
MIN_DELAY_SECONDS=1.5
MAX_DELAY_SECONDS=4.0

# ==========================================
# PERFORMANCE TUNING
# ==========================================
ENABLE_CONNECTION_POOLING=true
ENABLE_CACHING=true
ENABLE_ASYNC_PROCESSING=false
ENABLE_MONITORING=true

# ==========================================
# ERROR HANDLING
# ==========================================
GRACEFUL_DEGRADATION=true
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# ==========================================
# HEALTH CHECKS
# ==========================================
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# ==========================================
# METRICS EXPORT
# ==========================================
METRICS_EXPORT_INTERVAL=60
METRICS_RETENTION_DAYS=30
METRICS_FILE_PATH=./metrics/

# ==========================================
# BACKUP CONFIGURATION
# ==========================================
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./backups/

# ==========================================
# SECURITY HEADERS
# ==========================================
SECURITY_HEADERS_ENABLED=true
CORS_ENABLED=false
CORS_ORIGINS=
CSRF_PROTECTION_ENABLED=true

# ==========================================
# RESOURCE LIMITS
# ==========================================
MAX_MEMORY_MB=512
MAX_CPU_PERCENT=80
MAX_DISK_USAGE_PERCENT=90

# ==========================================
# ALERTING CONFIGURATION
# ==========================================
ALERTING_ENABLED=true
ALERT_EMAIL=
ALERT_WEBHOOK_URL=
ALERT_ON_ERROR_RATE=10
ALERT_ON_RESPONSE_TIME=30